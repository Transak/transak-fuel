    "url": "https://github.com/Transak/transak-fuel/issues"
  },
  "homepage": "https://github.com/Transak/transak-fuel#readme",
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2"
  },
  "files": [
    "/lib/**/*"
  ],
  "dependencies": {
    "fuels": "^0.101.2"
